{% extends 'base.html.twig' %}

{% block body %}
    <div class="hero-area" xmlns="http://www.w3.org/1999/html">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-3">
                            <img src="https://m.media-amazon.com/images/M/MV5BNDg1NTU2OWEtM2UzYi00ZWRmLWEwMTktZWNjYWQ1NWM1OThjXkEyXkFqcGdeQXVyMTQxNzMzNDI@._V1_.jpg" alt="">
                            <div class="btn-social">
                                <div id="shareBtnFacebook">Partager</div>
                                <div id="shareBtnTwitter">Twitter</div>
                            </div>
                        </div>
                        <div class="col-9">
                            <div class="row">
                                <div class="col-12 margin-bottom-10">
                                    <h1 class="no-margin-bottom">{{ allFilms.name }}</h1> <span>Date de sortie : 22/05/1994</span>
                                </div>
                                <div class="col-6">
                                    <p>Réalisateur : {{ allFilms.realisateur }}</p>
                                </div>
                                <div class="col-6">
                                    <p>Acteurs : {{ allFilms.acteurs }}
                                </div>
                                <div class="col-6">
                                    <p>Genre : {{ allFilms.genre }}
                                </div>
                                <div class="col-6">
                                    <p>Pays : {{ allFilms.nationalite }}
                                </div>
                                <div class="col-6">
                                    <p>Durée du film : {{ allFilms.timeFilm }}
                                </div>
                                <div class="col-12 margin-top-10">
                                    <h3>Sypnosis du film</h3>
                                    <p> {{ allFilms.description }} </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



{% endblock %}

{% block title %}

{% endblock %}

